<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Practica13_33.Views.AuthView"
			 Background="Azure">
	
	<Grid>
		<Grid HorizontalAlignment="Center" 
			  VerticalAlignment="Center"
			  RowDefinitions="*,*,*,*,*"
			  ColumnDefinitions="*,*">
			<Label Grid.ColumnSpan="2" Foreground="Black" FontSize="27" FontWeight="Bold" Margin="20" Grid.Row="0" Content="Авторизация" HorizontalAlignment="Center"/>
			<Label Margin="0,0,0,20" Foreground="Black" Grid.Column="0" Grid.Row="1" Content="Логин:"/>
			<TextBox Margin="0,0,0,20" Name="lg" Grid.Column="1" Grid.Row="1" Width="190"/>
			<Label Margin="0,0,0,20" Foreground="Black" Grid.Column="0" Grid.Row="2" Content="Пароль:"/>
			<TextBox Margin="0,0,0,20" Name="pass" Grid.Column="1" Grid.Row="2" Width="190"/>
			<Button Margin="0,0,0,5" Foreground="Black" Grid.ColumnSpan="2" Grid.Row="3" Click="ButtonEnter_Click" HorizontalAlignment="Center" Content="Авторизоваться"/>
			<Button Grid.ColumnSpan="2" Foreground="Black" Grid.Row="4" Click="ButtonRegistr_Click" HorizontalAlignment="Center" Content="Регистрация"/>
		</Grid>
	</Grid>
</UserControl>
